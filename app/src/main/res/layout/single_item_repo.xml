<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    android:background="@drawable/black_border"
    android:gravity="center"
    >

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/folder"
        android:id="@+id/repo_icon"/>

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/share"
        android:layout_marginBottom="15dp"
        android:layout_alignBottom="@id/repo_icon"
        android:layout_alignEnd="@id/repo_icon"
        android:id="@+id/icon"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MyCloset"
        android:textSize="16dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_below="@id/repo_icon"
        android:layout_alignStart="@id/repo_icon"
        android:layout_alignEnd="@id/repo_icon"
        android:id="@+id/repo_name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MyCloset"
        android:maxLines="2"
        android:textSize="12dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_below="@id/repo_name"
        android:layout_alignStart="@id/repo_name"
        android:layout_alignEnd="@id/repo_name"
        android:id="@+id/repo_desc"/>



</RelativeLayout>